{
  "name": "rdx",
  "version": "4.11.3",
  "description": "An HTML/ES/JSX compiler.",
  "main": "src/index.js",
  "files": [
    "src/"
  ],
  "bin": {
    "rdx": "src/index.js"
  },
  "watch": {
    "test:unit": {
      "patterns": [
        "src"
      ],
      "extensions": "jsx,spec.jsx",
      "inherit": true
    },
    "test:int": {
      "patterns": [
        "src"
      ],
      "extensions": "jsx,integration.jsx",
      "inherit": true
    }
  },
  "scripts": {
    "test:unit": "mocha --inline-diffs --require resistdesign-babel-register --ui exports './src/**/*.spec.jsx'",
    "test:int": "mocha --inline-diffs --require resistdesign-babel-register --ui exports './src/**/*.integration.jsx'",
    "test": "npm run test:unit && npm run test:int",
    "watch:unit": "npm-watch test:unit",
    "watch:int": "npm-watch test:int",
    "watch": "npm watch test:unit test:int"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resistdesign/rdx.git"
  },
  "keywords": [
    "javascript",
    "html",
    "webpack",
    "es6",
    "es7",
    "es2015",
    "es2016",
    "jsx",
    "react",
    "compile",
    "compiler"
  ],
  "author": "Resist Design",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/resistdesign/rdx/issues"
  },
  "homepage": "http://resistdesign.github.io/rdx",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "commander": "^5.0.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.4.2",
    "file-loader": "^5.1.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "ink": "^2.7.1",
    "ink-select-input": "^3.1.2",
    "ink-text-input": "^3.2.2",
    "mustache": "^4.0.0",
    "react": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "shell-quote": "^1.7.2",
    "webpack": "^4.41.6"
  },
  "devDependencies": {
    "expect.js": "^0.3.1",
    "flat": "^5.0.0",
    "flow-bin": "^0.121.0",
    "memfs": "^3.1.2",
    "mocha": "^7.1.0",
    "npm-watch": "^0.6.0",
    "resistdesign-babel-register": "^3.1.0"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  }
}
